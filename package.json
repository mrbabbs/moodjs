{
  "name": "moodjs",
  "version": "0.0.1",
  "description": "A face as cart to show emotional states",
  "main": "dist/mood-es6.js",
  "scripts": {
    "prestart": "npm run build-browser",
    "start": "ws",
    "commit": "git-cz",
    "pre-build": "rm -r dist && mkdir dist",
    "build": "npm run pre-build && cp src/mood.js dist/mood-es6.js && npm run build-browser",
    "build-browser": "browserify src/mood-browser.js -o dist/mood-browser.js -s MoodJS -t babelify",
    "test": "mochify --recursive --transform babelify",
    "test-watch": "npm test -- --watch",
    "test-specific": "mochify --transform babelify --",
    "test-specific-watch": "mochify -w --transform babelify --",
    "lint": "eslint -c .eslintrc ./src/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrbabbs/moodjs.git"
  },
  "keywords": [
    "mood",
    "sentiment",
    "chart",
    "face",
    "happy",
    "sad",
    "neutral",
    "javascript"
  ],
  "author": "Giovanni Esposito <gioesps@gmail.com> (http://mrbabbs.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mrbabbs/moodjs/issues"
  },
  "homepage": "https://github.com/mrbabbs/moodjs#readme",
  "dependencies": {
    "snapsvg": "0.4.0"
  },
  "devDependencies": {
    "babel": "6.5.2",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-polyfill": "6.9.0",
    "babel-preset-es2015": "6.6.0",
    "babel-register": "6.7.2",
    "babelify": "7.2.0",
    "browserify": "13.0.0",
    "chai": "3.5.0",
    "commitizen": "2.7.6",
    "cz-conventional-changelog": "1.1.6",
    "eslint": "2.8.0",
    "eslint-config-airbnb": "7.0.0",
    "eslint-plugin-import": "1.5.0",
    "eslint-plugin-jsx-a11y": "0.6.2",
    "eslint-plugin-react": "4.3.0",
    "ghooks": "1.2.1",
    "local-web-server": "1.2.3",
    "mocha": "2.4.5",
    "mochify": "2.17.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test && npm run lint"
    }
  }
}
